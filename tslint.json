{
  "extends": "tslint:recommended",
  "rules": {
    "no-reference": false,
    "space-before-function-paren": true,
    "triple-equals": true,
    "quotemark": [
      true,
      "single",
      "avoid-escape",
      "avoid-template"
    ],
    "max-line-length": [
      true, {
        "limit": 75,
        "check-strings": true,
        "ignore-pattern": "\\s+state\\.log\\("
      }
    ],
    "whitespace": [
      true,
      "check-branch",
      "check-decl",
      "check-operator",
      "check-rest-spread",
      "check-type",
      "check-typecast",
      "check-type-operator",
      "check-preblock",
      "check-postbrace"
    ],
    "typedef": [
      true,
      "call-signature",
      "arrow-call-signature",
      "parameter",
      "arrow-parameter",
      "property-declaration",
      "variable-declaration",
      "member-variable-declaration"
    ]
  }
}
